# NikAssistant Environment Configuration
# Copy this file to .env and update with your actual values

# ========================================
# EMAIL CONFIGURATION (Required for email notifications)
# ========================================
# Your Gmail address
EMAIL_USER=your_email@gmail.com
# Gmail App Password (not your regular password)
# Generate at: https://myaccount.google.com/security -> 2-Step Verification -> App passwords
EMAIL_PASS=your_gmail_app_password

# ========================================
# GOOGLE CALENDAR API (Optional - for calendar integration)
# ========================================
# Path to your Google Service Account JSON key file
# Get from: https://console.cloud.google.com/ -> Create Service Account -> Download JSON
GOOGLE_API_KEY=path/to/your/service-account-key.json
# Your Google Calendar ID (usually 'primary' for main calendar)
GOOGLE_CALENDAR_ID=primary

# ========================================
# FIREBASE (Optional - for mobile notifications)
# ========================================
# Path to Firebase Service Account key file
# Get from: Firebase Console -> Project Settings -> Service Accounts
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/firebase-key.json

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Enable debug mode for development (True/False)
DEBUG=False
# Port for the Streamlit application
APP_PORT=8501
# Application timezone (optional)
TIMEZONE=UTC

# ========================================
# NOTIFICATION SETTINGS (Optional)
# ========================================
# Enable desktop notifications (True/False)
DESKTOP_NOTIFICATIONS=True
# Enable email notifications for tasks (True/False)
EMAIL_NOTIFICATIONS=True
# Daily summary email time (24-hour format, e.g., 09:00)
DAILY_SUMMARY_TIME=09:00

# ========================================
# TASK SETTINGS (Optional)
# ========================================
# Default task reminder time in minutes before due date
DEFAULT_REMINDER_MINUTES=30
# Maximum number of tasks to show in dashboard
MAX_DASHBOARD_TASKS=10

# ========================================
# SECURITY SETTINGS (Optional)
# ========================================
# Secret key for session management (generate a random string)
SECRET_KEY=your_secret_key_here
# Enable HTTPS redirect (True/False)
FORCE_HTTPS=False

# ========================================
# DATABASE SETTINGS (Optional - for future use)
# ========================================
# Database type (json/sqlite/postgresql)
DATABASE_TYPE=json
# Database connection string (for non-JSON databases)
DATABASE_URL=

# ========================================
# INTEGRATION SETTINGS (Optional)
# ========================================
# Slack webhook URL for Slack notifications
SLACK_WEBHOOK_URL=
# Discord webhook URL for Discord notifications
DISCORD_WEBHOOK_URL=
# Telegram bot token for Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ========================================
# ADVANCED SETTINGS (Optional)
# ========================================
# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE=10
# Session timeout in minutes
SESSION_TIMEOUT=60
# Enable analytics (True/False)
ENABLE_ANALYTICS=False
# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO
